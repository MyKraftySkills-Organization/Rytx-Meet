<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rytx Meet | room</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script defer src="peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <link rel="stylesheet" href="style.css">
    <script defer src="script.js"></script>

    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>

   <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
</head>
<body>
    <div class="main">
        <div class="main__left" id="main_left">
            <div class="main__videos">
                <div id="video-grid">

                </div>
            </div>
            <div class="main__controls">
                <div class="main__controls__block">
                    <div onclick="muteUnmute();" class="main__controls__button main__mute_button">
                        <i class="fas fa-microphone"></i>
                        <span>Mute</span>
                    </div>

                    <div onclick="playStop()" class="main__controls__button main__video_button">
                        <i class="fas fa-video"></i>
                        <span>Stop Video</span>
                    </div>
                </div>
    
                <div class="main__controls__block">
                    <div class="main__controls__button">
                        <i class="fas fa-shield-alt"></i>
                        <span>Security</span>
                    </div>
                            
                    <div class="main__controls__button" onclick="openSideTab(event, 'participants')">
                        <i class="fas fa-user-friends"></i>
                        <span>Participants</span>
                    </div>
                
                    <div onclick="openSideTab(event, 'chat')"  class="main__controls__button">
                        <i class="fas fa-comment-alt"></i>
                        <span>Chat</span>
                    </div>
                    <div onclick="openSideTab(event, 'settings')"  class="main__controls__button">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </div>
                </div>
                <div id="myBtn" class="main__controls__block">
                    <div class="main__controls__button">
                        <span class="leave_meeting">Leave Meeting</span>
                    </div>
                </div>

            </div>
        </div>
        
        <!-- Tab content -->
        <div id="chat" class="main__right tabcontent">
            <div class="main__header">
                <h4>Chat</h4>
            </div>
            <div class="main__chat_window">
                <ul class="messages" id='messages_id'>

                </ul>
            </div>
            <div class="main__message_container">
                <input type="text" id="chat_message" placeholder="Type Message Here...">
            </div>
        </div>
    
        <div id="participants" class="main__right tabcontent">
            <div class="main__header">
                <h4>Participants</h4>
            </div>
        </div>

        <div id="settings" class="main__right tabcontent">
            <div class="main__header">
                <h4>Settings</h4>
                    <div class="select">
                        <label for="audioSource">Audio input source: </label><select id="audioSource"></select>
                    </div>

                    <div class="select">
                        <label for="audioOutput">Audio output destination: </label><select id="audioOutput"></select>
                    </div>

                    <div class="select">
                        <label for="videoSource">Video source: </label><select id="videoSource"></select>
                    </div>
            </div>
        </div>
    </div>  <!-- main ends here -->

      <!-- The Modal -->
      <div id="myModal" class="modal">

        <!-- Modal content -->
            <div class="modal-content text-white">
                <h3>Leave Meeting</h3>
                <div style="margin-top: 20px; margin:auto;">
                    <button class="btn btn-danger btn-lg">Leave</button>
                    &nbsp;
                    <button id="cancel" class="btn btn-primary btn-lg">Cancel</button>
                </div>
            </div>
        </div>

        <script defer>
            // Get the modal
            var modal = document.getElementById("myModal");

            // Get the button that opens the modal
            var btn = document.getElementById("myBtn");
            var cancel = document.getElementById("cancel");


            // When the user clicks on the button, open the modal
            btn.onclick = function() {
                modal.style.display = "block";
            }
            cancel.onclick = () => {
                modal.style.display = "none";
            }
        
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }

        </script>
</body>
</html>